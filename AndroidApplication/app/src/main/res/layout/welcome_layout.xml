<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.manassangram.myapplication.MainActivity"
    android:background="#d7f9d7" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:id="@+id/textViewSignup"
        android:layout_marginTop="42dp"
        android:textSize="30dp"
        android:textColor="#082734"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/editTextUsername"
        android:background="#578adbf1"
        android:inputType="text"
        android:textColor="#c2b4b4"
        android:textSize="30dp"
        android:textStyle="normal"
        android:padding="2dp"
        android:layout_below="@+id/textViewSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Name" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/editTextPhone"
        android:background="#578adbf1"
        android:inputType="number"
        android:textColor="#aaa2a2"
        android:textSize="30dp"
        android:textStyle="normal"
        android:padding="2dp"
        android:text="Phone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Sign Up"
        android:id="@+id/buttonSignup"
        android:textSize="30dp"
        android:textColor="#363434"
        android:clickable="true"
        android:longClickable="false"
        android:background="?attr/colorPrimary"
        android:allowUndo="false"
        android:layout_marginBottom="42dp"
        android:onClick="signUp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
